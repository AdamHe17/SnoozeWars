<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SetAlarm">

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/currTime"
        android:textSize="60sp"
        android:layout_above="@+id/alarmLabel"
        android:layout_centerHorizontal="true" />

    <EditText
        style="@style/CodeLook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/currTimeLabel"
        android:text="Current Time"
        android:layout_above="@+id/currTime"
        android:layout_alignStart="@+id/alarmLabel" />

    <EditText
        style="@style/CodeLook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alarmLabel"
        android:text="Alarm"
        android:layout_above="@+id/setAlarmButton"
        android:paddingBottom="0dip"
        android:paddingTop="0dip"
        android:layout_alignStart="@+id/setAlarmButton" />

    <Button
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Alarm"
        android:id="@+id/setAlarmButton"
        android:textSize="60sp"
        android:textAllCaps="false"
        android:textStyle="normal"
        android:textColor="#FFFFFF"
        android:focusable="true"
        android:layout_alignParentBottom="true"
        android:paddingLeft="30dip"
        android:paddingRight="30dip"
        android:onClick="setAlarm"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:textSize="20sp"
        android:textColor="#0f0e0f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Space Cat"
        android:id="@+id/textView"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/gpn_skynet2_fullcat"
        android:layout_width="250dp"
        android:layout_height="180dp"/>

</RelativeLayout>
